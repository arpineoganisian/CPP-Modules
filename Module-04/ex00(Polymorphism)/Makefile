NAME 	= polymorphism

FLAGS	= -g -Wall -Werror -Wextra -Wshadow -Wno-shadow

SRCS	=  main.cpp Animal.cpp Cat.cpp Dog.cpp

OBJS	= $(SRCS:.cpp=.o)

RM		= rm -rf

all: $(NAME)

$(NAME): $(OBJS)
			clang++ $(FLAGS) -o $(NAME) $(OBJS)
.cpp.o:
			clang++ $(FLAGS) -c $< -o $@
clean:
		$(RM) $(OBJS) a.out

fclean: clean
		$(RM) $(NAME)

re:		fclean all

.PHONY: all clean fclean re